{% extends 'base.html.twig' %}

{% block title %}Liste des Articles
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1 class="mb-4">üì¶ Liste des Articles</h1>

		<form method="get" class="mb-3 d-flex" role="search" onsubmit="return false;">
			<input type="text" name="q" value="{{ q|default('') }}" class="form-control me-2" placeholder="Recherche par r√©f√©rence ou nom...">
		</form>
		{% if q %}
			<div class="alert alert-info">R√©sultats pour :
				<strong>{{ q }}</strong>
			</div>
		{% endif %}

		<div class="mb-3 text-end">
			<a href="{{ path('app_article_new') }}" class="btn btn-success">
				‚ûï Ajouter un article
			</a>
		</div>

		<table class="table table-bordered table-hover table-striped">
			<thead class="table-dark">
				<tr>
					<th>#</th>
					<th>R√©f√©rence</th>
					<th>Nom</th>
					<th>Seuil d'alerte</th>
					<th>Description</th>
					<th>Stock actuel</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for article in articles %}
					<tr>
						<td>{{ article.id }}</td>
						<td>
							<strong>{{ article.refart }}</strong>
						</td>
						<td>{{ article.nomart }}</td>
						<td>{{ article.seuilalerte }}</td>
						<td>{{ article.description|slice(0, 50) }}
							{% if article.description|length > 50 %}...
							{% endif %}
						</td>
						<td>
							<span class="badge {{ article.stockBadgeClass }}">{{ article.stockActuel }}</span>
							{% if article.stockCritique %}
								<i class="bi bi-exclamation-triangle-fill text-danger ms-1" title="Stock critique !"></i>
							{% endif %}
						</td>
						<td>
							<a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn btn-sm btn-primary">üîç D√©tails</a>
							<a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-sm btn-warning">‚úèÔ∏è Modifier</a>
							<a href="{{ path('app_entreestock_new') }}?article={{ article.id }}" class="btn btn-sm btn-success">üì• Entr√©e</a>
							<a href="{{ path('app_sortiestock_new') }}?article={{ article.id }}" class="btn btn-sm btn-danger">üì§ Sortie</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="7" class="text-center text-muted">Aucun article trouv√©.</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

	<script>
		document.addEventListener('DOMContentLoaded', function () {
			const searchInput = document.querySelector('input[name="q"]');
			let tableBody = document.querySelector('table tbody');
			let lastValue = searchInput.value;

			searchInput.addEventListener('input', function () {
				const q = this.value;
				console.log('Recherche AJAX', q);
				if (q === lastValue)
					return;


				lastValue = q;
				fetch(`?q=${encodeURIComponent(q)
					}`, {
					headers: {
						'X-Requested-With': 'XMLHttpRequest'
					}
				}).then(r => r.text()).then(html => { // Remplacer le tbody existant par le nouveau
					const temp = document.createElement('table');
					temp.innerHTML = html;
					const newTbody = temp.querySelector('tbody');
					if (newTbody) {
						tableBody.parentNode.replaceChild(newTbody, tableBody);
						tableBody = newTbody; // Mettre √† jour la r√©f√©rence
					}
				});
			});
		});
	</script>
{% endblock %}
