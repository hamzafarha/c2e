{% extends 'base.html.twig' %}

{% block title %}Nouvel Article{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">üì¶ Cr√©er un nouvel article</h4>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.nomart, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.nomart) }}
                                {{ form_errors(form.nomart) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.refart, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.refart) }}
                                {{ form_errors(form.refart) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.seuilalerte, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.seuilalerte) }}
                                {{ form_errors(form.seuilalerte) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.description) }}
                            {{ form_errors(form.description) }}
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_article_index') }}" class="btn btn-secondary">
                                ‚Üê Retour √† la liste
                            </a>
                            <button type="submit" class="btn btn-success">
                                üíæ Cr√©er l'article
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
