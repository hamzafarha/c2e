{% extends 'base.html.twig' %}

{% block title %}Détail Équipement{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">📋 Détail de l'Équipement</h1>

        <div class="card shadow rounded">
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th>🆔 Numéro</th>
                            <td>{{ equipement.getId() }}</td>
                        </tr>
                        <tr>
                            <th>🔧 Type</th>
                            <td>{{ equipement.getTypeeq() }}</td>
                        </tr>
                        <tr>
                            <th>🏷️ Nom</th>
                            <td>{{ equipement.getNomeq() }}</td>
                        </tr>
                        <tr>
                            <th>🔁 Référence</th>
                            <td>{{ equipement.getReferenceeq() }}</td>
                        </tr>
                        <tr>
                            <th>📍 Emplacement</th>
                            <td>{{ equipement.getLocalisationeq() }}</td>
                        </tr>
                        <tr>
                            <th>📦 Modèle</th>
                            <td>{{ equipement.getModeleeq() }}</td>
                        </tr>
                        <tr>
                            <th>🔢 Numéro de série</th>
                            <td>{{ equipement.getNumserieeq() }}</td>
                        </tr>
                        <tr>
                            <th>État</th>
                            <td>
                                {% if equipement.getEtat() == 'en_service' %}
                                    <span class="badge bg-success">En service</span>
                                {% elseif equipement.getEtat() == 'en_panne' %}
                                    <span class="badge bg-danger">En panne</span>
                                {% elseif equipement.getEtat() == 'maintenance' %}
                                    <span class="badge bg-warning text-dark">Maintenance</span>
                                {% elseif equipement.getEtat() == 'hors_service' %}
                                    <span class="badge bg-secondary">Hors service</span>
                                {% else %}
                                    <span class="badge bg-light text-dark">Inconnu</span>
                                {% endif %}
                            </td>
                        </tr>
                    </tbody>
                </table>

                {% if equipement.getCodeQr() %}
                    <div class="text-center my-4">
                        <h5>QR Code de l'équipement</h5>
                        <img src="/{{ equipement.getCodeQr() }}" alt="QR Code" style="width:180px;height:180px;" />
                    </div>
                {% endif %}

                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('app_equipement_index') }}" class="btn btn-secondary">
                        ⬅️ Retour à la liste
                    </a>

                    <div>
                        <a href="{{ path('app_equipement_edit', {'ideq': equipement.getId()}) }}" class="btn btn-warning me-2">
                            ✏️ Modifier
                        </a>

                        {{ include('equipement/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
