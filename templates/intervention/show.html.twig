{% extends 'base.html.twig' %}

{% block title %}Détail Intervention{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">📝 Détail de l'Intervention</h1>

        <div class="card shadow rounded">
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th>🆔 Numéro</th>
                            <td>{{ intervention.idint }}</td>
                        </tr>
                        <tr>
                            <th>📅 Date</th>
                            <td>{{ intervention.dateint ? intervention.dateint|date('d/m/Y') : '' }}</td>
                        </tr>
                        <tr>
                            <th>🔧 Type</th>
                            <td>{{ intervention.typeint }}</td>
                        </tr>
                        <tr>
                            <th>👨‍🔧 Technicien</th>
                            <td>{{ intervention.technicien }}</td>
                        </tr>
                        <tr>
                            <th>État après</th>
                            <td>
                                {% if intervention.etatapres == 'réparé' %}
                                    <span class="badge bg-success">Réparé</span>
                                {% elseif intervention.etatapres == 'en attente' %}
                                    <span class="badge bg-warning text-dark">En attente</span>
                                {% elseif intervention.etatapres == 'non réparé' %}
                                    <span class="badge bg-danger">Non réparé</span>
                                {% else %}
                                    <span class="badge bg-light text-dark">{{ intervention.etatapres }}</span>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>📅 Prochaine date</th>
                            <td>{{ intervention.prochainedate ? intervention.prochainedate|date('d/m/Y') : '' }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('app_intervention_index') }}" class="btn btn-secondary">
                        ⬅️ Retour à la liste
                    </a>

                    <div>
                        <a href="{{ path('app_intervention_edit', {'idint': intervention.idint}) }}" class="btn btn-warning me-2">
                            ✏️ Modifier
                        </a>

                        {{ include('intervention/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
